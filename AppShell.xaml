<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LibraryOne.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LibraryOne"
    Shell.FlyoutBehavior="Disabled">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

    <TabBar x:Name="MyTabBar">
        <Tab Title="Search Books" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />

        </Tab>
        <Tab Title="Add Books" >
            <ShellContent ContentTemplate="{DataTemplate local:AddBooksPage}" Route="AddBooksPage" />

        </Tab>
        <Tab Title="Checkout Books" >
            <ShellContent ContentTemplate="{DataTemplate local:CheckoutPage}" Route="CheckoutPage" />

        </Tab>

    </TabBar>

</Shell>
